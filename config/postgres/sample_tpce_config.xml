<?xml version="1.0"?>
<parameters>

    <!-- Connection details -->
    <type>POSTGRES</type>
    <driver>org.postgresql.Driver</driver>
    <url>jdbc:postgresql://localhost:5432/benchbase?sslmode=disable&amp;ApplicationName=tpce&amp;reWriteBatchedInserts=true</url>
    <username>chengxinhao</username>
    <password>password</password>
    <isolation>TRANSACTION_SERIALIZABLE</isolation>
    <batchsize>128</batchsize>

    <!-- Scale factor -->
    <scalefactor>500</scalefactor>

    //fixme: the TPCEGenerator is not thread safe, it needs to be changed
    <loaderThreads>1</loaderThreads>

    <!-- specific configuration for tpc-e -->
    //todo file path
    <loadfiles>data/tpce</loadfiles>>
    <totalcustomers>5000</totalcustomers>
    <initialdays>300</initialdays>

    <!-- The workload -->
    <terminals>1</terminals>
    <works>
        <work>
            <time>60</time>
            <rate>10000</rate>
            <weights>10,10,10,10,10,10,10,10,10,10</weights>
        </work>
    </works>


    <!-- TPCE specific -->
    <transactiontypes>
        <transactiontype>
            <name>SecurityDetail</name>
        </transactiontype>
        <transactiontype>
            <name>BrokerVolume</name>
        </transactiontype>
        <transactiontype>
            <name>CustomerPosition</name>
        </transactiontype>
        <transactiontype>
            <name>MarketWatch</name>
        </transactiontype>
        <transactiontype>
            <name>TradeStatus</name>
        </transactiontype>
        <transactiontype>
            <name>TradeLookUp</name>
        </transactiontype>
        <transactiontype>
            <name>TradeOrder</name>
        </transactiontype>
        <transactiontype>
            <name>TradeUpdate</name>
        </transactiontype>
        <transactiontype>
            <name>MarketFeed</name>
        </transactiontype>
        <transactiontype>
            <name>TradeResult</name>
        </transactiontype>

    </transactiontypes>
</parameters>
